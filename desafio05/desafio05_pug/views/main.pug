.container.fluid
  .row
    .col
      table.table.table-bordered.table-striped.table-sm
        thead
          tr
            th ID
            th Title
            th Price
            th Thumbnail
        tbody#productsTable
          each prod in products 
            tr
              td=prod.id
              td=prod.title
              td='$ '+prod.price
              td
                img(src=prod.thumbnail, width="50")
          else
            tr
              td(colspan="4") No products found
      button.btn.btn-primary#addProductBtn Add product
      script(src="index.js")
