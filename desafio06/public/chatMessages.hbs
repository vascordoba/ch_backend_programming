{{#if user}}
<form onsubmit="return postMessage()">
  <div class="form-group">
    <label for="chat" class="col-sm-2 col-form-label">{{user}}:</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="chat" placeholder="Message">
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-10">
      <button type="submit" class="btn btn-primary">Send</button>
    </div>
  </div>
</form>
{{/if}}
<table class="table table-sm table-borderless table-striped">
  <tbody id="productsTable">
    {{#if messages}}
    {{#each messages}}
    <tr>
      <td><b style="color:blue">{{user}}</b> <span style="color: brown; font-size:x-small">{{tsFormat
          ts}}</span><br /><i style="color: green;">{{msg}}</i></td>
    </tr>
    {{/each}}
    {{else}}
    <tr>
      <td>No messages found</td>
    </tr>
    {{/if}}
  </tbody>
</table>